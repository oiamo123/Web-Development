extends template.pug 
block scripts 
  script(defer type="module" src="/register.js")
block stylesheets 
  link(rel="stylesheet", href="/register.css")
block content 
  nav
    a(href='/overview') Home
    a(href='/contact') Contact
  form(action='/register' method='post')
    label(for='f-name') First Name:
    input#f-name(type='f-name' name='f-name')
    div
    label(for='l-name') Last Name:
    input#l-name(type='l-name' name='l-name')
    div
    label(for='email') Email:
    input#email(type='text' name='email')
    div
    label(for='password') Password:
    input#password(type='password' name='password' autocomplete="on")
    div
    label(for='confirm-password') Confirm Password:
    input#confirm-password(type='password' name='confirm-password' autocomplete="on")
    div
  button.submit--button Submit